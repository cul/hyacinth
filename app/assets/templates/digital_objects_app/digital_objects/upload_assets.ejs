<% Hyacinth.ContextualNav.setNavTitle('&laquo; Leave Asset Upload', '#' + Hyacinth.DigitalObjectsApp.paramsToHashValue({controller: 'digital_objects', action: 'show', pid: parentDigitalObject.getPid()})); %>
<% Hyacinth.ContextualNav.setNavItems([]); %>


<h1><%= parentDigitalObject.digital_object_type['display_label'] %>: <%- parentDigitalObject.getTitle() %></h1>
<strong>Project:</strong> <%= parentDigitalObject.getProject()['display_label'] %>
<br />
<strong>PID:</strong> <%= parentDigitalObject.getPid() %>
<hr />

<div id="digital-object-asset-upload" class="row">
    <div class="col-md-7">

        <div role="tabpanel">

          <!-- Nav tabs -->
          <ul class="nav nav-tabs" role="tablist">
            <li role="presentation" class="active"><a href="#browser_upload" aria-controls="browser_upload" role="tab" data-toggle="tab">Browser Upload</a></li>
            <li role="presentation"><a href="#filesystem_upload" aria-controls="filesystem_upload" role="tab" data-toggle="tab">Filesystem Import</a></li>
          </ul>

          <!-- Tab panes -->
          <div class="tab-content">
            <div role="tabpanel" class="tab-pane active" id="browser_upload">
                <form class="digital-object-asset-upload-form hyacinth-editor-upload-container">

                    <div class="browser-upload">

                      <div class="upload-drop-zone aligncenter">
                        Click here or drag and drop one or more files
                        <br />
                        <small>Max size per file: 1GB</small>
                        <input class="asset-upload-file-input" type="file" name="file" multiple="">
                      </div>

                      <div class="progress">
                        <div class="progress-bar progress-bar-info" role="progressbar" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100" style="width: 0%">
                          <span class="sr-only">0% Complete</span>
                        </div>
                      </div>
                    </div>

                    <!-- The extended global progress state -->
                    <div class="extended-progress-info">&nbsp;</div>

                </form>
            </div>
            <div role="tabpanel" class="tab-pane" id="filesystem_upload"></div>
          </div>

        </div>
        <hr />
    </div>
    <div class="col-md-5">
        <div class="uploaded-files">
            <h4>Uploaded Files</h4>
            <!-- The table listing the files available for upload/download -->
            <table class="uploaded-files-table table table-striped table-bordered">
                <thead>
                    <th class="col-xs-8">File</th>
                    <th class="col-xs-2">Size</th>
                    <th class="col-xs-2">Status</th>
                </thead>
                <tbody>
                    <tr class="placeholder"><td colspan="3">Newly uploaded files will appear here</td></tr>
                </tbody>
            </table>
        </div>
    </div>
</div>
